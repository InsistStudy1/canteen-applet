Page {
  background-color: #f1f1f1;
}

/* ----------------------------------- 地址列表 Start ----------------------------------- */
.address-list-title {
  font-size: 26rpx;
  color: #333;
  padding: 10rpx 30rpx;
}
.address-list .item {
  position: relative;
  display: flex;
  padding: 30rpx;
  border-bottom: 1px solid #eee;
  background-color: #fff;
}
.address-list .info {
  flex-grow: 1;
}
.address-list .info .address {
  line-height: 45rpx;
}
.address-list .info .address .default {
  display: inline-block;
  width: 66rpx;
  height: 40rpx;
  text-align: center;
  background-color: #adffb2;
  font-size: 20rpx;
  margin-right: 18rpx;
  vertical-align: middle;
  color: green;
}
.address-list .info .address text {
  font-size: 28rpx;
  font-weight: 600;
}
.address-list .info .userinfo {
  margin-top: 10rpx;
}
.address-list .info .userinfo text {
  font-size: 24rpx;
  color: #8c8c8c;
}
.address-list .operation {
  flex-basis: 120rpx;
  text-align: right;
  margin-right: 10rpx;
  height: 100%;
}
.address-list .operation text {
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  font-size: 38rpx;
  margin: 2px;
}
.address-list .setting_default {
  position: absolute;
  font-size: 22rpx;
  right: 45rpx;
  bottom: 30rpx;
  color: #ffcb57;
}
/* ----------------------------------- 地址列表 End ----------------------------------- */

/* ----------------------------------- 新增地址 Start ----------------------------------- */
.add-address {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  background-color: #fff;
}
.add-address text {
  color: #ffcc58;
  margin-right: 15rpx;
}
/* ----------------------------------- 新增地址 End ----------------------------------- */
