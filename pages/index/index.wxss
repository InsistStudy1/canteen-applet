Page {
  background: linear-gradient(#ffcc58, #fff, #fff) fixed;
}
/* ----------------------------------- 头部 Start ----------------------------------- */
/*左侧天气*/
.header {
  display: flex;
  padding: 12rpx 0;
  align-items: center;
  height: 90rpx;
  box-sizing: border-box;
}
.header .weather-box {
  flex-basis: 114rpx;
  height: 100%;
  color: #333;
  padding: 2rpx 0;
}
.header .city {
  display: block;
  height: 38rpx;
  line-height: 38rpx;
  font-size: 26rpx;
  text-align: center;
  font-weight: 600;
}
.header .weather {
  display: block;
  font-size: 18rpx;
  height: 24rpx;
  line-height: 24rpx;
  text-align: center;
}

/*搜索框*/
.search-box {
  position: relative;
  flex-grow: 1;
}
.search-box i-icon {
  position: absolute;
  left: 15rpx;
  top: 13rpx;
  color: #666;
  height: 100%;
  line-height: 100%;
}
.search-box .search {
  width: 100%;
  height: 66rpx;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 0 60rpx 0 60rpx;
  font-size: 26rpx;
  box-sizing: border-box;
}

/*右侧*/
.scan {
  flex-basis: 93rpx;
  text-align: center;
}
.scan text {
  font-size: 40rpx;
}
/* ----------------------------------- 头部 End -----------------------------------*/

/* ----------------------------------- banner Start -----------------------------------*/
.banner_box {
  padding: 10rpx 20rpx 13rpx;
}
.banner_box swiper {
  height: 235rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.banner_box swiper image {
  width: 100%;
  height: 100%;
}
/* ----------------------------------- banner End -----------------------------------*/

/* ----------------------------------- 今日推荐 Start -----------------------------------*/
.food_recommend {
  margin: 0 20rpx 0 10rpx;
  overflow: hidden;
}
.food_recommend .title {
  padding: 15rpx 20rpx;
  font-size: 34rpx;
  color: #333;
}
.food_recommend movable-area {
  height: 250rpx;
  width: 100%;
}
.food_recommend .recommend-slide {
  display: flex;
  padding: 17rpx 0;
  width: 1216rpx;
  justify-content: space-between;
}
.food_recommend .recommend-slide .item {
  float: left;
  width: 186rpx;
}
.food_recommend .item image{
  width: 100%;
  height: 140rpx;
  border-radius: 8rpx;
}
.food_recommend .item .sub-title{
  display: block;
  font-size: 22rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.food_recommend .item .price{
  display: block;
  font-size: 25rpx;
  color: #f56c20;
}

/*.food_recommend*/
/* ----------------------------------- 今日推荐 End -----------------------------------*/

/* ----------------------------------- 养生推荐 Start -----------------------------------*/
.health_recommend {
  padding: 0 20rpx;
}
.health_recommend .header {
  height: 65rpx;
  line-height: 65rpx;
  display: flex;
  justify-content: space-between;
}
.health_recommend .header .title {
  flex: 1;
  font-size: 34rpx;
  color: #333;
}
.health_recommend .header .more {
  flex: 1;
  text-align: right;
  font-size: 24rpx;
  color: #afafae;
}
.health_recommend .header text {
  font-size: 20rpx;
}
.health_recommend .content {
  display: flex;
  justify-content: space-between;
}
.health_recommend .content .item {
  position: relative;
  width: 346rpx;
  height: 150rpx;
  border-radius: 8rpx;
  overflow: hidden;
}
.health_recommend .content image {
  width: 100%;
  height: 100%;
}
.health_recommend .content text {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 35rpx;
  background-color: rgba(0, 0, 0, .3);
  font-size: 22rpx;
  padding-left: 19rpx;
  color: #f7f7f7;
}
