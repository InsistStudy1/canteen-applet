/* ----------------------------------- 菜品列表 Start -----------------------------------*/
.foodlist-container {
  padding: 38rpx 20rpx 15rpx 39rpx;
}
/*筛选*/
.foodlist-container .select-container {
  height: 35rpx;
  line-height: 35rpx;
}
.foodlist-container picker {
  float: left;
  font-size: 24rpx;
  color: #545454;
}
.foodlist-container picker text {
  font-size: 20rpx;
}
.foodlist-container .sold {
  float: left;
  margin-left: 34rpx;
  font-size: 20rpx;
  color: #333;
}
.foodlist-container .sold.active {
  color: #f56c20;
}
/*菜品*/
.foodlist .item{
  display: flex;
  justify-content: space-between;
  width: 100%;
  padding: 20rpx 0;
}
.foodlist .item image {
  flex-basis: 140rpx;
  height: 140rpx;
  border-radius: 8rpx;
}
.foodlist .item .content {
  flex-grow: 1;
  margin-left: 20rpx;
}
.foodlist .item .content .title {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
}
.foodlist .item .content .detail {
  display: block;
  font-size: 20rpx;
  font-weight: normal;
  color: #545454;
}
.foodlist .item .content .price {
  font-size: 30rpx;
  color: #f56c20;
}
.foodlist .item .order {
  flex-basis: 100rpx;
  font-size: 20rpx;
  color: #545454;
  line-height: 140rpx;
}
.foodlist .item .order text {
  font-size: 18rpx;
}
/* ----------------------------------- 菜品列表 End -----------------------------------*/

