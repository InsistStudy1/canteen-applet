  height: 350rpx;
  background-color: #ffcc58;
  box-sizing: border-box;
}
.userinfo {
  padding-top: 46rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo image {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 14rpx;
  border: 2px solid #fff;
  border-radius: 50%;
}
.userinfo text {
  color: #fff;
  font-size: 32rpx;
}
