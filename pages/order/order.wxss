/* ----------------------------------- 订单列表 Start ----------------------------------- */
.orderlist {
}
.orderlist .item {
  display: flex;
  margin: 20rpx;
  height: 215rpx;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 0 6px 0 rgba(0, 0, 0, 0.08);
  border-radius: 5px;
  box-sizing: border-box;
}
.orderlist .item image {
  flex-basis: 60rpx;
  height: 60rpx;
  border-radius: 5rpx;
}
.orderlist .item .info {
  flex-grow: 1;
  padding-left: 20rpx;
}
.orderlist .item .info .title {
  height: 48rpx;
  line-height: 48rpx;
  font-size: 28rpx;
  color: #030303;
}
.orderlist .item .info .time,
.orderlist .item .info .foodname {
  height: 30rpx;
  line-height: 30rpx;
  font-size: 20rpx;
  color: #8c8c8c;
}

.orderlist .item .remark {
  text-align: right;
}
.orderlist .item .remark .status {
  font-size: 24rpx;
  color: #ffcb57;
}
.orderlist .item .remark .price {
  margin-top: 40rpx;
  font-size: 24rpx;
  color: #010101;
}
.orderlist .item .remark .btn {
  width: 90rpx;
  height: 42rpx;
  margin-top: 25rpx;
  line-height: 42rpx;
  font-size: 24rpx;
  text-align: center;
  color: #f56c20;
  border: solid 1rpx #f56c20;
  border-radius: 5rpx;
}
/* ----------------------------------- 订单列表 End ----------------------------------- */
