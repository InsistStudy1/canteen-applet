/* ----------------------------------- 购物车列表 Start ----------------------------------- */
/*饭堂类型 Start*/
.canteen-type-item {
  background-color: #fff;
  margin-bottom: 20rpx;
}
.canteen-type-item .header {
  display: flex;
  height: 82rpx;
  line-height: 82rpx;
  border-bottom: 1px solid #eee;
}
.canteen-type-item .header checkbox {
  padding: 0 30rpx 0 29rpx;
  width: 30rpx;
  height: 30rpx;
}
.canteen-type-item .header view {
  /*background-color: #f7f7f7;*/
}
.canteen-type-item .header text {
  font-size: 26rpx;
  color: #282828;
}
/*饭堂类型 End*/

/*所属饭堂列表 Start*/
i-checkbox {
  transform: scale(.7);
}
/* 把高度挤下去看不到下边框 */
.type_item .checkbox-index--i-checkbox-cell {
  padding-bottom: 150rpx;
}
.type_item {
  position: relative;
  display: flex;
  height: 200rpx;
  box-sizing: border-box;
  padding: 25rpx 29rpx 25rpx 0;
  background-color: #fff;
  overflow: hidden;
}
.type_item i-checkbox {
  position: absolute;
  top: 40rpx;
  width: 90rpx;
}
.type_item .i-cell::after {
  border: none;
}
.type_item image {
  padding-left: 95rpx;
  flex-basis: 150rpx;
  height: 150rpx;
}
.type_item .content {
  padding-left: 29rpx;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.type_item .content .title {
  font-size: 28rpx;
  color: #333;
}
.type_item .content .price {
  font-size: 36rpx;
  color: #282828;
}
.type_item i-input-number {
  position: absolute;
  right: 29rpx;
  bottom: 26rpx;
}
/*所属饭堂列表 End*/

/*结算栏*/
.payment {
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
  padding: 0 30rpx;
}
.payment .button {
  width: 150rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 26rpx;
  background-color: #ffcb57;
}
.payment .price {
  color: #ff4b33;
  font-size: 32rpx;
  margin-right: 15rpx;
  font-weight: 600;
}
  /* ----------------------------------- 购物车列表 End ----------------------------------- */

