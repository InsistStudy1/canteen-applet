/* ----------------------------------- 图片遮罩 Start ----------------------------------- */
.image-mask {
  position: fixed;
  left: 0;
  top: 0;
  display: flex;
  align-items: center;
  width: 100%;
  height: 100%;
  z-index: 999;
  background:rgba(0,0,0,1);
}
.show-image {
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  width: 100%;
  height: 750rpx;
}
.show-image swiper {
  width: 100%;
  height: 100%;
}
.show-image swiper image {
  width: 100%;
  height: 100%;
}
/* ----------------------------------- 图片遮罩 End ----------------------------------- */
